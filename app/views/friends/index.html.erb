<table  id="friends" class="table table-striped table-hover">
  <thead class="thead-dark" id="friendlist-header">
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @friends.each do |friend, index| %>
      <%= render friend %>
      <td> <%= link_to "Show this friend", friend %> </td>
    <% end %>
  </tbody>
</table>

</br>
<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>

